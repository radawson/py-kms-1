[Unit]
Description=py-kms Server Service
After=network.target 

[Service]
Type=simple
User=pykms # Run as dedicated user
Group=pykms # Run as dedicated group
WorkingDirectory=/opt/py-kms # Set working directory to app root
ExecStart=/usr/bin/python3 /opt/py-kms/pykms_Server.py # Use placeholder install path
Restart=on-failure # Restart if it fails
# StandardInput=tty-force # Removed

[Install]
WantedBy=multi-user.target
